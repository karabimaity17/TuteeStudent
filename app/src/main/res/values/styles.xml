<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tablayouttext" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tablayouttext2" parent="Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/selected_page</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="TextViewTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlNormal">@color/grey</item>

    </style>

    <!-- Popup Style -->
    <style name="MyPopupStyle" parent="Widget.AppCompat.PopupMenu">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:iconTint" tools:targetApi="o">@color/black</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="Switch">
        <item name="android:switchTextOn">On</item>
        <item name="android:switchTextOff">Off</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="BottomSheetDialogTransparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTransparent</item>
    </style>

    <style name="BottomSheetTransparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>