<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    android:layout_margin="@dimen/_5sdp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_139sdp"
        android:layout_height="@dimen/_90sdp"
        app:cardBackgroundColor="@color/light_black"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_90sdp"
                android:src="@drawable/demo_1" />

            <TextView
                android:id="@+id/textnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_105sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/bold"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageall"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/a_black" />

            <TextView
                android:id="@+id/textchapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/bold"
                android:text="Chapter\n Title 1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_67sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/semibold"
                android:text="134 videos"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>