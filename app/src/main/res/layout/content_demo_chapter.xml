<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500sdp"
            android:orientation="vertical"
            android:background="@drawable/whiteback2"
            android:elevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagevideo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:src="@drawable/video1" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_190sdp"
                    android:alpha="0.3"
                    android:background="@color/black"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:src="@drawable/play" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_170sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold"
                        android:lineSpacingExtra="6sp"
                        android:text="1:45"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_176sdp"
                        android:layout_weight="1"
                        android:background="#73ffffff"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_170sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold"
                        android:lineSpacingExtra="6sp"
                        android:text="1:45"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_171sdp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_maxmini" />
                </LinearLayout>
            </RelativeLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:tabBackground="@color/white"
                app:tabIconTint="@color/purple"
                style="@style/tablayouttext"
                app:tabIndicatorHeight="@dimen/_2sdp"
                app:tabMode="scrollable"
                app:tabTextColor="@color/light_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="#e6e6e6" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_minus30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textfeedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Feedback"
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btnupgrade"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/btnbackground"
                android:layout_gravity="bottom"
                android:fontFamily="@font/bold"
                android:text="Upgrade"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>