<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_8sdp">
        <ImageView
            android:id="@+id/img_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_man"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/text_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arnold Shwarranger"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000"/>
            <TextView
                android:id="@+id/text_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:fontFamily="@font/fonts_medium"
                android:textSize="13sp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/text_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply"
                android:fontFamily="@font/fonts_medium"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/favorite"
                app:tint="#CD0A0A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="#CD0A0A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts_medium"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_write_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_15sdp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_man"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/grey_box2"
            android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Your Comment Here..."
            android:fontFamily="@font/fonts_medium"
            android:background="@null"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            app:tint="@color/colorPurple"
            android:src="@drawable/send"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_8sdp">
            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_man"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/person_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arnold Shwarranger"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/reply_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:fontFamily="@font/fonts_medium"
                android:textSize="13sp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:src="@drawable/favorite"
                    app:tint="#CD0A0A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Liked"
                    android:textColor="#CD0A0A"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts_medium"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>