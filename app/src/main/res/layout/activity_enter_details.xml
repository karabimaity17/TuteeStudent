<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".EnterDetails">

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".EnterDetails">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/background3"
            android:layout_marginTop="@dimen/_400sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/geometry"
            android:layout_marginTop="@dimen/_400sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_490sdp"
                android:background="@drawable/whiteback2"
                android:orientation="vertical"
                android:elevation="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_450sdp" />

                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/indicator2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/viewpager7"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        app:dotsColor="@color/purple"
                        app:dotsCornerRadius="3dp"
                        app:dotsSize="5dp"
                        app:dotsSpacing="@dimen/_2sdp"
                        app:dotsWidthFactor="7.5"
                        app:selectedDotColor="@color/purple" />


                    <!--      <me.relex.circleindicator.CircleIndicator
                              android:id="@+id/indicator2"
                              android:layout_width="wrap_content"
                              android:layout_height="@dimen/_30sdp"
                              android:layout_below="@id/viewpager7"
                              android:layout_centerHorizontal="true"
                              app:ci_drawable="@drawable/selected_dot"
                              app:ci_drawable_unselected="@drawable/unslected_dot"
                              app:ci_height="@dimen/_4sdp" />-->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textskip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/semibold"
                        android:lineSpacingExtra="3sp"
                        android:paddingLeft="@dimen/_50sdp"
                        android:text="Skip"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.widget.Button
                        android:id="@+id/btnnext"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_whitebackground"
                        android:fontFamily="@font/semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/purple"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>