<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagearrow"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/textdesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/bold"
            android:lineSpacingExtra="4sp"
            android:text="Enter Your Details"
            android:textColor="@color/light_black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textbelowdesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:text="Pleasr input the following details"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/semibold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="ALEX BENJAMIN"
        android:textColor="@color/purple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:fontFamily="@font/medium"
        android:lineSpacingExtra="3sp"
        android:text="USER NAME/ EMAIL ADDRESS"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="normal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/semibold"
            android:text="anyemailaddress@gmailcom"
            android:textColor="@color/light_black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingStart="@dimen/_minus14sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/underline"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/medium"
            android:hint="PASSWORD"
            android:textColorHint="@color/grey"
            app:hintTextAppearance="@style/TextViewTextAppearance">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/semibold"
                android:inputType="textPassword"
                android:paddingTop="@dimen/_30sdp"
                android:text="99999999999999"
                android:textColor="@color/light_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_230sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:text="WEAK"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:drawableRight="@drawable/info"
            android:drawablePadding="@dimen/_10sdp"/>

        <!--<ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_267sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:src="@drawable/info" />-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_minus14sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/underline"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/medium"
            android:hint="CONFIRM PASSWORD"
            android:textColorHint="@color/grey"
            app:hintTextAppearance="@style/TextViewTextAppearance">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/semibold"
                android:inputType="textPassword"
                android:paddingTop="@dimen/_30sdp"
                android:text="99999999999999"
                android:textColor="@color/light_black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textmatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_230sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/semibold"
            android:text="MATCHED"
            android:textColor="@color/light_green"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/checkbox_background"
            android:button="@null" />

        <TextView
            android:id="@+id/longtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:fontFamily="@font/medium"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="By continuing registation you agree to the\nfollowing Tearms &amp; Conditions without reservation"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="normal" />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-201dp"
            android:fontFamily="@font/medium"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="\nTearms &amp; Conditions"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:fontFamily="@font/medium"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:text="\nwithout reservation"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="normal" />-->
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btncreate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/btnbackground"
        android:fontFamily="@font/semibold"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>