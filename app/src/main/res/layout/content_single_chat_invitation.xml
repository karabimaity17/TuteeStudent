<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomnav">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="vertical"
                android:background="@drawable/lightcolorbg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Chat Invitation"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/fonts_regular"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_35sdp"
                    android:layout_margin="@dimen/_2sdp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/dp"
                        android:scaleType="fitXY"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daniel William"
                            android:textColor="@color/colorPurple"
                            android:fontFamily="@font/fonts_medium"
                            android:layout_marginVertical="@dimen/_3sdp"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CBSE"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textStyle="normal"
                                android:textSize="14sp"/>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="#000"
                                android:layout_marginHorizontal="@dimen/_5sdp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="India"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textStyle="normal"
                                android:textSize="14sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Physics"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="@color/grey"
                                android:textStyle="normal"
                                android:textSize="12sp"/>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@color/grey"
                                android:layout_marginHorizontal="@dimen/_5sdp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="@color/grey"
                                android:textStyle="normal"
                                android:textSize="12sp"/>

                        </LinearLayout>



                    </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="end"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:text="23 Mins"
                            android:fontFamily="@font/fonts_medium"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:textStyle="normal"/>



                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_grey"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_15sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    app:cardCornerRadius="@dimen/_16sdp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_man"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_25sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:background="@drawable/chat_in">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/fonts_medium"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="4sp"
                            android:text="Hi Student,you are invited you for a Demo Class. Please visit my profile and Chapter Demo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fonts_medium"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="3sp"
                            android:text="07:33 PM" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_10sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_40sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_1sdp">
                            <TextView
                                android:id="@+id/btn_wait"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Dismiss"
                                android:textColor="#cc2d2d"
                                android:textAllCaps="false"
                                android:gravity="center"
                                android:fontFamily="@font/fonts_bold"
                                android:background="@drawable/red_light_back"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_40sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_1sdp">
                            <TextView
                                android:id="@+id/btn_attend"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Accept"
                                android:textColor="#0a9524"
                                android:textAllCaps="false"
                                android:fontFamily="@font/fonts_bold"
                                android:gravity="center"
                                android:background="@drawable/green_light_box"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menubottom_nav"

        />



</RelativeLayout>