<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            android:text="TuteeApp" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginVertical="@dimen/_60sdp"
            android:src="@drawable/alarm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            android:text="Remind" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#753abc"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            android:text="Your Class Time" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp">
                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dismiss"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:fontFamily="@font/fonts_bold"
                    android:background="@drawable/bg_button"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/btn_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Go to Class"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fonts_bold"
                    android:background="@drawable/btnbackground2"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>