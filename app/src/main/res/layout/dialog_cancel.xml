<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_whitebackground"
    android:layout_marginHorizontal="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_115sdp"
        android:background="@drawable/cancel_back"
        android:layout_marginVertical="@dimen/_20sdp"
        >
        <ImageView
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_115sdp"
            android:src="@drawable/ex"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_medium"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#7e7e7e"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="Are you Sure to Cancel\n the Upload ?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_25sdp"
        android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    app:cardCornerRadius="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Yes Cancel"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:fontFamily="@font/fonts_bold"
                        android:background="@drawable/btnbackground2"/>
                </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_35sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_10sdp">
            <TextView
                android:id="@+id/btn_dont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Don't"
                android:textColor="#753abc"
                android:textAllCaps="false"
                android:gravity="center"
                android:fontFamily="@font/fonts_bold"
                android:background="@drawable/bg_button"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>