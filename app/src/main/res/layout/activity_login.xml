<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/background3"
            android:layout_marginTop="@dimen/_400sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/geometry"
            android:layout_marginTop="@dimen/_400sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_430sdp"
                android:background="@drawable/whiteback2"
                android:orientation="vertical"
                android:elevation="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imageregister"
                    android:layout_width="@dimen/_124sdp"
                    android:layout_height="@dimen/_124sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:src="@drawable/login" />

                <TextView
                    android:id="@+id/textregister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/semibold"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="LOGIN AS"
                    android:textColor="@color/light_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textstudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="5sp"
                    android:text="Student"
                    android:textColor="@color/light_black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:fontFamily="@font/medium"
                    android:hint="EMAIL"
                    android:paddingStart="@dimen/_minus13sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/underline"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/grey"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/semibold"
                        android:paddingTop="@dimen/_30sdp"
                        android:text="alexabenjamin@gmail.com"
                        android:textColor="@color/light_black"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/medium"
                    android:hint="PASSWORD"
                    android:paddingStart="@dimen/_minus13sdp"
                    android:visibility="visible"
                    android:background="@drawable/underline"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/grey"
                    >

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:backgroundTintMode="@color/grey"
                        android:fontFamily="@font/semibold"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/_30sdp"

                        android:text="900654000023400"
                        android:textColor="@color/light_black"
                        android:textSize="14sp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_15sdp"

                        android:background="@drawable/checkbox_background"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Remember Me"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/textforgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Forget Password?"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20sdp">

                <android.widget.Button
                    android:id="@+id/btnlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/bg_whitebackground"
                    android:fontFamily="@font/bold"
                    android:lineSpacingExtra="3sp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:layout_above="@+id/lin"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:lineSpacingExtra="4sp"
                    android:text="Don't have an account ? Register Here"
                    android:textColor="@color/white"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>
