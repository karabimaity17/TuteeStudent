<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/second"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagearrow"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/textdesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/bold"
            android:lineSpacingExtra="4sp"
            android:text="Enter School Details"
            android:textColor="@color/light_black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textbelowdesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:text="Please input the following details"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="normal" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spingrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:fontFamily="@font/medium"
        android:hint="GRADE"
        android:text="9-12"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:met_floatingLabel="normal"
        app:met_textColorHint="@color/grey"
        app:met_underlineColor="@color/grey" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinschool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:fontFamily="@font/medium"
        android:hint="SCHOOL"
        android:text="Abu Dhabi International School"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:met_floatingLabel="normal"
        app:met_textColorHint="@color/grey"
        app:met_underlineColor="@color/grey" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinstate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:fontFamily="@font/medium"
        android:hint="STATE"
        android:text="Dubai"
        android:inputType="textEmailAddress"
        android:textColor="@color/light_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:met_floatingLabel="normal"
        app:met_textColorHint="@color/grey"
        app:met_underlineColor="@color/grey" />
