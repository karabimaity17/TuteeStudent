<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteback2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_30sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/lightcolorbg"
                android:fontFamily="@font/semibold"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_16sdp"
                android:text="Contact to"
                android:textColor="@color/purple"
                android:textSize="14sp" />
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_15sdp"
                        android:elevation="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_8sdp">
                            <RadioButton
                                android:id="@+id/btnacademic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fonts_bold"
                                android:text="Academic Director"
                                android:textColor="@color/light_black"
                                android:textSize="16sp"
                                android:drawableEnd="@drawable/radiobutton_background"
                                android:button="@null"/>
                            <RadioGroup
                                android:id="@+id/rg_academic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/light_grey"/>
                                <RadioButton
                                    android:id="@+id/academic_topic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="Topic 01"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp"/>

                                <RadioButton
                                    android:id="@+id/academic_topic2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="Topic 02"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp" />

                                <RadioButton
                                    android:id="@+id/academic_topic3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="Topic 03"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp"/>
                            </RadioGroup>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:elevation="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_8sdp">
                            <RadioButton
                                android:id="@+id/btnteacher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fonts_bold"
                                android:text="My Teacher"
                                android:textColor="@color/light_black"
                                android:textSize="16sp"
                                android:drawableEnd="@drawable/radiobutton_background"
                                android:button="@null"/>
                            <RadioGroup
                                android:id="@+id/rg_teacher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:background="@color/light_grey"/>
                                <RadioButton
                                    android:id="@+id/teacher_topic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="English"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp"/>

                                <RadioButton
                                    android:id="@+id/teacher_topic2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="Mathematics"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp" />

                                <RadioButton
                                    android:id="@+id/teacher_topic3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/radiobutton_background"
                                    android:button="@null"
                                    android:fontFamily="@font/fonts_semibold"
                                    android:text="Physics"
                                    android:textColor="@color/light_black"
                                    android:textSize="14sp"/>
                            </RadioGroup>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:fontFamily="@font/medium"
                android:text="COMMENT"
                android:textColor="@color/grey"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonts_semibold"
                android:text="Lorem ipsum dolor sit amet,consetetur sadipscing elitr,sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat,sed diam voluptua."
                android:textColor="@color/light_black"
                android:textSize="15sp"
                android:background="@drawable/underline"
                android:lineSpacingExtra="4sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"/>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
