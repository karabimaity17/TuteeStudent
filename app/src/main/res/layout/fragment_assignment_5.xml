<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/lightcolorbg"
            android:fontFamily="@font/fonts_semibold"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#753abc"
            android:lineSpacingExtra="4sp"
            android:text="Work 5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_semibold"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#3e3e3e"
            android:lineSpacingExtra="6sp"
            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_145sdp"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic_5"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_145sdp"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic_6"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_uploading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_145sdp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#f8f8f8"
                app:cardCornerRadius="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_cancel_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/red_cross"/>
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/loading"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/fonts_light"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#7e7e7e"
                        android:lineSpacingExtra="3sp"
                        android:text="Uploading (20%)…" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_145sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#f8f8f8"
                app:cardCornerRadius="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_cancel_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/red_cross"/>
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/loading"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/fonts_light"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#7e7e7e"
                        android:lineSpacingExtra="3sp"
                        android:text="Uploading (20%)…" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_attach"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="#f8f8f8">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/attach"
                    app:tint="#7e7e7e"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_active_attach"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="#f8f8f8"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/active_attach" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/btn_wait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Upload"
                    android:textColor="#753abc"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:fontFamily="@font/fonts_bold"
                    android:background="@drawable/bg_button"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/btn_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:fontFamily="@font/fonts_bold"
                    android:background="@drawable/btnbackground2"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>