<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/lightcolorbg"
            android:fontFamily="@font/fonts_semibold"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#753abc"
            android:lineSpacingExtra="4sp"
            android:text="Work 3" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            app:cardCornerRadius="@dimen/_20sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:progress="85"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_background"
                    style="?android:attr/progressBarStyleHorizontal" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_10sdp">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/play_blue"
                    android:layout_marginLeft="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="4sp"
                    android:text="Audio File…" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:fontFamily="@font/fonts_regular"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="3sp"
                    android:text="07:33 PM" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_20sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="92"
                        android:max="100"
                        android:progressDrawable="@drawable/uploading_progress"
                        style="?android:attr/progressBarStyleHorizontal" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp">
                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/baseline_adjust" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_medium"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="4sp"
                        android:text="Recording (92%)…" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="end"
                android:fontFamily="@font/fonts_semibold"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#cc2d2d"
                android:text="Cancel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_microphone"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="#f8f8f8">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/microphone"
                    app:tint="@color/grey"/>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/img_active_microphone"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:src="@drawable/active_microphone"
                android:scaleType="fitXY"
                android:visibility="gone"/>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_10sdp">
                <TextView
                    android:id="@+id/btn_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:fontFamily="@font/fonts_bold"
                    android:background="@drawable/btnbackground2"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>