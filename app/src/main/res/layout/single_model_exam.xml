<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/linear_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_term"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:text="Final"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="14sp"
                    android:textStyle="normal"/>
                <ImageView
                    android:id="@+id/img_tick"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_check"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_percentile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Percentile 89%"
                android:textColor="#fff"
                android:fontFamily="@font/fonts_medium"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Date: 19.12.20"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="13sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/view_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="View Report"
                    android:textColor="@color/grey"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="13sp"
                    android:textStyle="normal"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>