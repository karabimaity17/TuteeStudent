<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_139sdp"
    android:layout_height="@dimen/_90sdp"
    android:id="@+id/rel"
    android:layout_margin="@dimen/_5sdp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/light_black"
        app:cardCornerRadius="@dimen/_8sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="@drawable/demo_1" >
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/bold"
                    android:text="ENG"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/unlock"
                    app:tint="@color/white"/>
            </RelativeLayout>




            <ImageView
                android:id="@+id/imageall"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/a_black" />

            <TextView
                android:id="@+id/textchapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/bold"
                android:text="Chapter\n Title 1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_67sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/semibold"
                android:text="134 views"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <ImageView
                android:id="@+id/action"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bluecheck"
                android:layout_marginBottom="@dimen/_25sdp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>